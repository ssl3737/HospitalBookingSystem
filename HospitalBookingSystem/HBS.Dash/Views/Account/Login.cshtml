@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h2><span class="entypo-login"></span> Login</h2>
    <div asp-validation-summary="All" class="text-danger"></div>    
    <button  type="submit" class="btn submit"><span class="entypo-lock"></span></button>
    <div class="inner-addon left-addon">
        <span class="glyphicon glyphicon-user entypo-user inputUserIcon"></span>
        <input asp-for="Email" class="user" type="text" placeholder="Email" />
    </div>
    <div class="inner-addon left-addon">
        <span class="glyphicon glyphicon-user entypo-key inputPassIcon"></span>
        <input asp-for="Password" type="password" class="pass" placeholder="Password" />
    </div>
    <div class="checkbox">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @Html.DisplayNameFor(m => m.RememberMe)
        </label>
    </div>
    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a><br/>
    <a asp-action="ForgotPassword">Forgot your password?</a>
 </form> 
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
